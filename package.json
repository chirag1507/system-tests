{
  "name": "system-tests",
  "version": "1.0.0",
  "description": "System level acceptance tests following Dave Farley's principles",
  "main": "index.js",
  "scripts": {
    "test:acceptance": "cucumber-js --format progress",
    "test:acceptance:report": "cucumber-js --format @cucumber/pretty-formatter",
    "test:acceptance:parallel": "cucumber-js --parallel 2",
    "build": "tsc",
    "clean": "rm -rf dist",
    "pretest": "npm run build"
  },
  "keywords": [
    "acceptance-tests",
    "system-tests",
    "cucumber",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}
